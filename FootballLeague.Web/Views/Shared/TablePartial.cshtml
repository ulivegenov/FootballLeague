@{
    ViewData["Title"] = "Teams table view";
}

<div class="row">
    <div class="text-center" style="margin:auto">
        <hr />
        <table class="table-hover table-striped" width="100%" border="1" cellspacing="2" cellpadding="4">
            <partial name="TeamHeadPartial" />
            <tbody>
                @for (int i = 0; i < Model.Entities.Count; i++)
                {
                    <tr onclick="location.href = '@Url.Action("Details", new { id = Model.Entities[i].Id })'">
                        <th class="align-middle" scope="row">@(i + 1)</th>
                        <td class="align-middle">@Model.Entities[i].Name</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
