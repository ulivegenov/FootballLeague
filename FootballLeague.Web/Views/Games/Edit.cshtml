@model FootballLeague.Web.ViewModels.Games.GameWebDetailsModel
@{
    ViewData["Title"] = "Game Edit Page";
}

<div class="row">
    <div style="margin:auto">
        <section>
            <form id="account" enctype="multipart/form-data" method="post">
                <h4 class="text-center">Edit Game</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-row">
                    <div class="form-group">
                        <input type="hidden" asp-for="CreatedOn" class="form-control" />
                        <span asp-validation-for="CreatedOn" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <input type="hidden" asp-for="HomeTeamId" class="form-control" />
                        <span asp-validation-for="HomeTeamId" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="HomeTeam.Name"></label>
                        <input asp-for="HomeTeam.Name" class="form-control" readonly />
                        <span asp-validation-for="HomeTeam.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="HomeTeamGoals"></label>
                        <input asp-for="HomeTeamGoals" class="form-control" />
                        <span asp-validation-for="HomeTeamGoals" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <input type="hidden" asp-for="AwayTeamId" class="form-control" />
                        <span asp-validation-for="AwayTeamId" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="AwayTeam.Name"></label>
                        <input asp-for="AwayTeam.Name" class="form-control" readonly />
                        <span asp-validation-for="AwayTeam.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="AwayTeamGoals"></label>
                        <input asp-for="AwayTeamGoals" class="form-control" />
                        <span asp-validation-for="AwayTeamGoals" class="text-danger"></span>
                    </div>
                </div>
                <hr />
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary">Edit Result</button>
                </div>
            </form>
        </section>
    </div>
</div>
