@model FootballLeague.Web.ViewModels.Teams.TeamWebDetailsModel
@{
    ViewData["Title"] = "Team Edit Page";
}

<div class="row">
    <div style="margin:auto">
        <section>
            <form id="account" enctype="multipart/form-data" method="post">
                <h4 class="text-center">Add new Team</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <hr />
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary">Update</button>
                    <a class="btn btn-secondary" asp-controller="Teams" asp-action="Details" asp-route-id="@Model.Id">Go Back</a>
                </div>
            </form>
        </section>
    </div>
</div>
